var mongoose = require('mongoose');

var UserGardenSchema = new mongoose.Schema({
    user : Objectid,
    units : [{
        name : String, 
        beds : [{
            name : String,
            vegets : [String],
            numVeget : Number
        }],
        numBed : Number}],
    numUnit : Number,
    name : String
});

 var UserInfoSchema = new mongoose.Schema({
    usrName : String,
    realName : String,
    email : String
 })

var UnitDailyStatistic = new mongoose.Schema({
    usrName : String,
    unitIndex : Number,
    date : Date,
    status : {
        ph : Number,
        temp : Number,
        nitrat : Number
    }
})

